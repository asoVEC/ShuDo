<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vegy.aso.ac.jp.shudo" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskListActivity"
            android:label="@string/title_activity_task_list" >
        </activity>
        <activity
            android:name=".TaskListActivity2"
            android:label="@string/title_activity_task_list"></activity>
        <activity
            android:name=".TutorialActivity"
            android:label="@string/title_activity_tutorial" >
        </activity>
        <activity
            android:name=".AddTaskActivity"
            android:label="@string/title_activity_management_task" >
        </activity>
        <activity
            android:name=".AddTaskActivity2"
            android:label="@string/title_activity_management_task" >
        </activity>
        <activity
            android:name=".PreferenceActivity"
            android:label="@string/title_activity_management_task" >
        </activity>

        <receiver android:name="model.Receiver" >
            <intent-filter>
                <action android:name="MyAlarmAction" />
            </intent-filter>
        </receiver>
        <service
            android:name="model.PushService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
